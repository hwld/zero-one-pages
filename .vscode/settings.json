{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "on",
  "tailwindCSS.classAttributes": [
    ".*Class",
    "class",
    "className",
    "classNames",
    "ngClass",
    ".*ClassMap",
  ],
  "tailwindCSS.experimental.classRegex": [
    [
      "clsx\\(.*?\\)(?!\\])",
      "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"
    ]
  ]
}