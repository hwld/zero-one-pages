{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "typecheck",
			"type": "shell",
			"command": "npx",
			"args": [
				"tsc",
				"--noEmit"
			],
			"problemMatcher": [
				"$tsc"
			],
			// Cmd + Shfit + Bで実行できるように、ビルドタスクとして定義する
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"close": true
			},
			"runOptions": {
				"runOn": "default"
			}
		}
	]
}